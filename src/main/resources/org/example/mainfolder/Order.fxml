<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.mainfolder.OrderController" alignment="CENTER" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <CheckBox fx:id="pivoCheckBox" text="Пиво - 500 руб." />
    <Spinner fx:id="pivoSpinner" min="1" max="1000" initialValue="1" editable="true" />
    <CheckBox fx:id="viskiCheckBox" text="Виски - 300 руб." />
    <Spinner fx:id="viskiSpinner" min="1" max="1000" initialValue="1" editable="true" />
    <CheckBox fx:id="vodkaCheckBox" text="Водка - 200 руб." />
    <Spinner fx:id="vodkaSpinner" min="1" max="1000" initialValue="1" editable="true" />
    <Button fx:id="calculateButton" text="Посчитать" />
    <TextArea fx:id="receipt" editable="false" />
</VBox>
